# =============================================================================
# URL SHORTENER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# 
# DOCKER TIP: You can reference this in docker-compose.yml:
#   env_file:
#     - .env
#
# SECURITY: Never commit .env to git! Add it to .gitignore
# =============================================================================

# Application Settings
APP_NAME=URL Shortener
BASE_URL=http://localhost:5000
SECRET_KEY=change-this-to-a-random-string-in-production

# Flask Configuration
FLASK_DEBUG=true
PORT=5000

# =============================================================================
# DATABASE (uncomment when you add PostgreSQL)
# =============================================================================
# DATABASE_URL=postgresql://user:password@db:5432/urlshortener
# POSTGRES_USER=user
# POSTGRES_PASSWORD=change-this-password
# POSTGRES_DB=urlshortener

# =============================================================================
# REDIS (uncomment when you add Redis caching)
# =============================================================================
# REDIS_URL=redis://redis:6379/0

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# FLASK_DEBUG=false
# SECRET_KEY=super-secure-random-key-here
# BASE_URL=https://yourdomain.com
